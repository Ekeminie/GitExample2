<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:background="@drawable/ccup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.android.justjava.MainActivity"
    android:backgroundTintMode="add">

    <EditText
        android:id="@+id/name_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter your name"
        android:inputType="textCapWords" />
    <EditText
        android:id="@+id/order_summary_email_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter your name"
        android:inputType="textCapWords" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Toppings"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="12sp" />
    <CheckBox
        android:id="@+id/whipped_cream_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@android:color/black"
        android:paddingLeft="24dp"
        android:text="Whipped Cream"
        android:onClick="submitOrder"
        android:textSize="14sp"
        android:textColor="@android:color/black"/>
    <CheckBox
        android:id="@+id/chocolate_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@android:color/black"
        android:text="Chocolate"
        android:paddingLeft="24dp"
        android:textSize="14sp"
        android:onClick="submitOrder"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Milk Shake"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/light_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light $1"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@android:color/black"
                android:onClick="submitOrder"/>
            <RadioButton
                android:id="@+id/heavy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heavy $2"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@android:color/black"
                android:onClick="submitOrder"/>
            <RadioButton
                android:id="@+id/none_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@android:color/black"
                android:onClick="submitOrder"/>
        </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Sugar Quantity"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <Spinner
        android:id="@+id/sugarlevel"
        android:dropDownWidth="wrap_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/selectoption"
        android:entries="@array/sugar_level">

    </Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Quantity"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="decrement"
            android:text="-" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:text="@string/quantity_text"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:textColor="@android:color/black"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="increment"
            android:text="+" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="10dp"
        android:text="Order Summary"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/order_summary_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="@string/price_text"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="submitOrder1"
        android:text="Order" />

</LinearLayout>
</ScrollView>